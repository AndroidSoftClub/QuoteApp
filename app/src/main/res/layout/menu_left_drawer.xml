<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">

        <ImageView
            android:id="@+id/dTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            tools:src="@drawable/mtop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/sp_logo" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/dBtm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitEnd"
        tools:src="@drawable/mbtm" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_7sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <ImageView
                android:id="@+id/d_home"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_home_press" />

            <ImageView
                android:id="@+id/d_category"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_categories" />

            <ImageView
                android:id="@+id/d_download"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_download" />

            <ImageView
                android:id="@+id/text_quote"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_text" />

            <ImageView
                android:id="@+id/quote_maker"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_tmaker" />

            <ImageView
                android:id="@+id/my_quotes"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_tmyquotes" />

            <RelativeLayout
                android:layout_width="@dimen/_145sdp"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:id="@+id/d_dark"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/d_mode" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/modeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:thumbTint="@color/thumb_color"
                    app:trackTint="@color/track_color" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/d_share"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_share_btn" />

            <ImageView
                android:id="@+id/d_rate"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_rate_btn" />

            <ImageView
                android:id="@+id/d_privacy"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_privacy_btn" />

            <ImageView
                android:id="@+id/d_more"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/d_more_btn" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>